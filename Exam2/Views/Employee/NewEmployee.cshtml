@model Exam2.Models.vm2
@using Exam2.data
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <title>NewEmployee</title>
</head>
<body>
    <form method="post">
        <div class="container">
            <div class="row"><div class="col-lg-12"><h1>New Employee</h1></div></div>
            <div class="row">
                <div class="col-lg-2">Name</div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="emp.Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">Phone</div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="emp.Phone"/>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">Email</div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="emp.Email" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">Country</div>
                <div class="col-lg-6">
                    <select class="form-control" asp-for="emp.Country_id"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">Birth Date</div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="emp.Birth_Date"/>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">Image</div>
                <div class="col-lg-6">

                    <input type="file" value="Upload" class="form-control btn btn-primary" asp-for="emp.Image"/>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">

                    <input type="submit" value="Save" class="btn btn-primary" asp-action="saveEmployee" />
                </div>
            </div>
        </div>
    </form>
</body>
</html>
